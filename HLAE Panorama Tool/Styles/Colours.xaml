<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:HLAE_Panorama_Tool.Styles">

    <Color x:Key="BackgroundDark">#2D2D30</Color>
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>

    <Color x:Key="BackgroundDarker">#232326</Color>
    <SolidColorBrush x:Key="BackgroundDarkerBrush" Color="{StaticResource BackgroundDarker}"/>

    <Color x:Key="HighlightGrey">#414147</Color>
    <SolidColorBrush x:Key="HighlightGreyBrush" Color="{StaticResource HighlightGrey}"/>
    
    <Color x:Key="OffWhite">#CDCDCD</Color>
    <SolidColorBrush x:Key="OffWhiteBrush" Color="{StaticResource OffWhite}"/>

    <Color x:Key="MidGrey">#565656</Color>
    <SolidColorBrush x:Key="MidGreyBrush" Color="{StaticResource MidGrey}"/>

    <Color x:Key="BlueClick">#007ACC</Color>
    <SolidColorBrush x:Key="BlueClickBrush" Color="{StaticResource BlueClick}"/>

    <Style TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{StaticResource OffWhiteBrush}"/>
    </Style>

</ResourceDictionary>