<Application x:Class="HLAE_Panorama_Tool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HLAE_Panorama_Tool"
             xmlns:properties="clr-namespace:HLAE_Panorama_Tool.Properties"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <properties:Settings x:Key="Settings"/>
            
            <ResourceDictionary.MergedDictionaries>
                <!-- Order is important -->
                <ResourceDictionary Source="Styles/Sizes.xaml"/>
                <ResourceDictionary Source="Styles/Colours.xaml"/>
                <ResourceDictionary Source="Styles/Fonts.xaml"/>

                <!-- Custom Controls -->
                <ResourceDictionary Source="Styles/CustomButton.xaml"/>
                <ResourceDictionary Source="Styles/CustomTextBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
